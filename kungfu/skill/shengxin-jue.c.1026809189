inherit FORCE;
#include <ansi.h>
string check() { return "force"; }
#include "/kungfu/skill/force_list.h"
int valid_enable(string usage) { return usage == "force"; }
int valid_learn(object me)
{
        mapping skl; 
        string *sname;
        int i, k=0;
        skl=this_player()->query_skills();
        sname=sort_array( keys(skl), (: strcmp :) );
        if(me->query_skill("shengxin-jue", 1) > 99){
        for(i=0; i<sizeof(skl); i++) {
                if (SKILL_D(sname[i])->check() == "force")
                k++;  
        }
if ((int)me->query_skill("force", 1) < 10
          ||(int)me->query_skill("force", 1)/2 < i/3 )
                return notify_fail("你的基本内功火候还不够。\n");
        return 1;
}
int practice_skill(object me)
{
        if ( me->query_skill("shengxin-jue", 1) < 130 )
                return notify_fail("你的圣心决还没这修为，你只能用学(xue)来增加。\n");
        if ( me->query_temp("weapon") )
                return notify_fail("你必须空手练习圣心决。\n");
        if ( (int)me->query("qi") < 70 )
                return notify_fail("你的气不够练习圣心决。\n");
        if ( (int)me->query("jingli") < 70 )
                return notify_fail("你的精力不够练习圣心决。\n");
        if ( (int)me->query("neili") < 70 )
                return notify_fail("你的内力不够练习圣心决。\n");
        if ( me->query_skill("shengxin-jue", 1) < 250 ) {
                me->add("neili", -60);
                me->receive_damage("jingli", 80, "精力透支过度死了");
                me->receive_damage("qi", 80, "体力透支过度死了");
        }
        else {
                me->add("neili", -160);
                me->receive_damage("jingli", 100, "精力透支过度死了");
                me->receive_damage("qi", 100, "体力透支过度死了");
        }
        return 1;
}
string exert_function_file(string func)
{
        return __DIR__"shengxin-jue/" + func;
}
