#include <ansi.h>

void main(object ob)
{
        remove_call_out("to_full");
        call_out("to_full", 4+ random(3), ob);
}

void to_full(object ob)
{
        ob->set("water", ob->max_water_capacity());
        ob->set("food", ob->max_food_capacity());
        tell_object(ob, WHT"经过半天消化，你只觉得有肚子已是十分饱了。\n"NOR);
        ob->apply_condition("full_food", 10);
        ob->apply_condition("full_water", 10);
}

